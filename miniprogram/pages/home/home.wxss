/* miniprogram/home/home.wxss */
.page-body {
  overflow: hidden;
  height: 100%;
  background:linear-gradient(-45deg,rgba(121,117,118,1),rgba(189,189,189,1));
  transition: all 2s ease-in;
  opacity: 0;
  display: none;
}
.page-body.show {
  opacity: 1;
  display: block;
}

.text-wrapper {
  margin-top: 54rpx;
  box-sizing: border-box;
  padding: 110rpx 100rpx;
  width: 738rpx;
  height: 870rpx;
  position: relative;
}
.text-wrapper > .background {
  width: 100%;
  height: 100%;

  position: absolute;
  top: 0;
  left: 0;
}
.text {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1)
}

.buttons {
  width: 100%;
  display: flex;
  justify-content: center;
  text-align: center;
}

.buttons > .record {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: white;
  margin-right: 37rpx;
}


.buttons > .submit {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: white;
  margin-left: 37rpx;
}


.welcome {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
  top: 0;
  left: 0;
  background-color: #f2f2f2;

  transition: all 1s ease;
}

.welcome.hide {
  opacity: 0;
  z-index: -1000;
}

.welcome >.icons {
  position: fixed;
  bottom: 278rpx;
  left: calc(50% - 107rpx);

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.welcome > .icons > .shijin {
  width: 168rpx;
  height: 168rpx;
  margin-bottom: 48rpx;
}

.welcome > .icons > .shijin-text {
  width: 118rpx;
  height: 60rpx;
  margin-bottom: 22rpx;
}

.welcome > .icons > .shijin-slogon {
  width: 214rpx;
  height: 28rpx;
}