<!--miniprogram/home/home.wxml-->
<view class="page-body {{showWelcome ? '':'show'}}"
  catch:touchstart="onTouchStart"
  catch:touchend="onTouchEnd">
  <view class='tabar' style='margin-top:{{bar_Height}}px;'>
    <view>时锦</view>
  </view>
  <view class="text-wrapper">
    <image class="background" src="../../images/home-bg@2x.png"/>
    <image class="back-to-home" src="../../images/back-to-home@2x.png"/>
    <textarea
      disabled= false
      class="text"
      value="{{pageContent}}"
      disabled=true
    />

    <view class="comment-status">
      <i class=""/>
      <view class="like-count">
        {{ likeCount }}
      </view>
      <i class="" bind:tap="viewComment"/>
      <view class="comment-count" bind:tap="viewComment">
        {{ commentCount }}
      </view>
    </view>
  </view>
  <view class="hint-text">
    向上拉也可查看整本书哦！
  </view>
  <view class="buttons">
    <view class="button-watch-others">
      别人的书
    </view>
  </view>

  <cover-view wx:if="{{ showComments }}"
    class="comments-container">
    <cover-view class="close-btn" bind:tap="closeComment">
      关闭
    </cover-view>
    aaa
  </cover-view>
</view>