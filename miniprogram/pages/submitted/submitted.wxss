.tabar {
  width: 100%;
  box-sizing: border-box;
  text-align: center;
  font-size: 38rpx;
  color: white;
  background-color:transparent;
}
  
.tabar view {
  padding: 25rpx 0rpx;
}
.page-body {
  overflow: hidden;
  height: 100%;
  height: 100%;
  background:linear-gradient(-45deg,rgba(133,140,124,1),rgba(176,184,169,1));
  transition: all 2s ease-in;
  opacity: 0;
  display: none;
}
.page-body.show {
  opacity: 1;
  display: block;
}

